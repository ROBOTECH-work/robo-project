  <script>
    // Time stamp
    function clock(){const t=new Date();document.getElementById('time').textContent=t.toLocaleTimeString();}
    setInterval(clock,1000);clock();

    // Lines to simulate running "scripts" (harmless text only)
    const log = document.getElementById('log');
    const lines = [
      '[INIT] Bootstrapping security monitor...',
      '[INFO] Scanning open ports: 22, 80, 443, 8080',
      '[INFO] Running script: port_sniffer.js',
      '[WARN] Unusual traffic pattern detected (simulated)',
      '[RUN] Injecting friendly payload... (harmless)',
      '[EXEC] running script: phantom_scan.js',
      '[OK] Harvest complete: 0 items (prank)',
      '[ERR] Attempt to access /admin denied',
      '[ALERT] Files flagged (simulated) — quarantining',
      '[EXEC] running script: cleanup_routine.sh',
      '[DONE] cleanup complete',
      '[NOTICE] System integrity: RESTORED'
    ];

    let i=0; const bar = document.getElementById('bar');
    function step(){
      if(i<lines.length){
        const el=document.createElement('div'); el.className='line';
        if(lines[i].includes('WARN')||lines[i].includes('ALERT')) el.innerHTML='<span class="err">'+lines[i]+'</span>';
        else if(lines[i].includes('OK')||lines[i].includes('DONE')||lines[i].includes('NOTICE')) el.innerHTML='<span class="ok">'+lines[i]+'</span>';
        else el.textContent=lines[i];
        log.appendChild(el);
        log.scrollTop = log.scrollHeight;
        const pct = Math.round(((i+1)/lines.length)*100);
        bar.style.width = pct + '%';
        i++; setTimeout(step, 800 + Math.random()*600);
      } else {
        document.getElementById('banner').textContent = 'YOU HAVE BEEN HACKED';
        document.getElementById('banner').style.color = 'var(--accent)';
        setTimeout(()=>{
          document.getElementById('reveal').style.display = 'flex';
        }, 1500);
      }
    }
    setTimeout(step, 600);

    // Buttons
    document.getElementById('closeBtn').addEventListener('click', ()=>{
      document.getElementById('reveal').style.display='none';
      document.getElementById('banner').textContent='PRANK — ROBOTECHDIGI ❤';
      document.getElementById('banner').style.color='var(--neon)';
      const note = document.createElement('div'); note.className='line ok'; note.style.marginTop='8px'; note.innerHTML='[PRANK] This was a harmless message from <strong>RobotechDigi</strong>. Do not click unknown links.';
      log.appendChild(note); log.scrollTop = log.scrollHeight;
    });

    document.getElementById('tipsBtn').addEventListener('click', ()=>{
      alert('Security tips:\n\n1) Never click links from unknown senders.\n2) Use strong unique passwords and a password manager.\n3) Enable two-factor authentication.\n4) Back up important data.\n5) Think before you share personal info.\n\nWe love you — RobotechDigi');
    });

    window.addEventListener('keydown',(e)=>{ if(e.key==='Escape') document.getElementById('reveal').style.display='none'});
  </script>
